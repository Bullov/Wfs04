<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:converters="clr-namespace:WpfApp1.Converters"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="640" MinWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FF979797" IsEnabled="{Binding PageOneViewModel.IsInProgress}">
            <Button 
                Height="50"
                Padding="5"
                Margin="0,5,0,5"
                Content="Page 1"
                Command="{Binding GoToPage1}" BorderBrush="#FF99B6EA"
                >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                        <GradientStop Color="#FFF7F9FD"/>
                        <GradientStop Color="#FF99B6EA" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button 
                Height="30"
                Padding="5"
                Margin="0,5,0,5"
                Content="Page 2"
                Command="{Binding GoToPage2}"/>

            <Button 
                Height="30"
                Padding="5"
                Margin="5"
                Content="Options"
                Command="{Binding GoToOptions}"/>

            <Button 
                Height="30"
                Padding="5"
                Margin="5"
                Content="PrintDebugInfo"
                Command="{Binding PrintDebugInfo}"/>

        </StackPanel>

        <Grid Grid.Column="1" Visibility="{Binding IsPage1, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}" IsEnabled="{Binding PageOneViewModel.IsInProgress}" d:IsHidden="True">
            <!-- <Grid.RowDefinitions> -->
            <!--     <RowDefinition Height="200*"/> -->
            <!--     <RowDefinition Height="200*"/> -->
            <!-- </Grid.RowDefinitions> -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" DataContext="{Binding PageOneViewModel}">
                <StackPanel Orientation="Horizontal">

                    <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя проекта: " TextAlignment="Center" HorizontalAlignment="Center" Padding="5"/>
                            <TextBox MinWidth="150" Text="{Binding ProjectName}"/>
                            <Button Content="Новый проект" Command="{Binding CreateNewProject}"/>
                            <Button Content="Загрузить проект" Command="{Binding LoadProject}"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
                <ListBox Padding="5" Margin="5" ItemsSource="{Binding ProjectsList}" Name="ProjectListBox" MaxHeight="100" MinHeight="100">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedProjectChanged}" CommandParameter="{Binding ElementName=ProjectListBox, Path=SelectedItem}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding SelectedProjectChanged}" CommandParameter="{Binding ElementName=ProjectListBox, Path=SelectedItem}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>


                <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5">
                    <StackPanel>
                        <TextBlock Text="Источник данных" TextAlignment="Center" HorizontalAlignment="Center" Padding="5" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Файл"/>
                            <RadioButton Margin="5,0,0,0" Command="{Binding SetWorkWithFile}" IsChecked="{Binding IsWorkWithFile}"/>

                            <TextBlock Text="Диск" Margin="10,0,0,0"/>
                            <RadioButton Margin="5,0,0,0" Command="{Binding SetWorkWithDevice}" IsChecked="{Binding IsWorkWithDevice}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" 
                            Visibility="{Binding IsWorkWithFile, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                    <Border 
                        Padding="10" 
                        Height="57" 
                        Width="260"
                        Margin="10"
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,1">
                        <TextBlock 
                            HorizontalAlignment="Left"
                            Text="{Binding PathToFileWithVideos}" 
                            TextWrapping="Wrap" 
                            VerticalAlignment="Center"
                            TextAlignment="Center"/>
                    </Border>
                    <Button 
                        Content="Выбрать файл" 
                        Width="140" 
                        Height="45" 
                        Margin="10"
                        Command="{Binding SelectFile}"/>
                </StackPanel>

                <ComboBox 
                    ItemsSource="{Binding DiskList}" 
                    SelectedItem="{Binding SelectedDevice}"
                    Visibility="{Binding IsWorkWithDevice, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}"
                    DisplayMemberPath="DeviceId"
                    Margin="5"/>

                <Button Content="StartScan"
                        Width="200"
                        Height="30"
                        Margin="10"
                        Command="{Binding TestScan}"/>

                <TextBlock Text="Папка в которой будут находится видеозаписи" Margin="10,20,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Border 
                        Padding="10" 
                        Height="57" 
                        Width="260"
                        Margin="10"
                        BorderBrush="Black" 
                        BorderThickness="1,1,1,1">
                        <TextBlock 
                            HorizontalAlignment="Left"
                            Text="{Binding PathToVideos, UpdateSourceTrigger=PropertyChanged}" 
                            TextWrapping="Wrap" 
                            VerticalAlignment="Center"
                            TextAlignment="Center"/>
                    </Border>
                    <Button 
                        Content="Выбрать папку" 
                        Width="140" 
                        Height="45" 
                        Margin="10"
                        Command="{Binding SelectFolder}"/>
                </StackPanel>

                <StackPanel Margin="0,20,0,0">
                    <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Фильтрация по времени"/>
                            <CheckBox Margin="5,0,0,0" IsChecked="{Binding IsNeedTimeCheck}"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Visibility="{Binding IsNeedTimeCheck, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                        <TextBlock Text="Дата начала" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <DatePicker Margin="10" MinWidth="180"
                                        SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                                        Focusable="False" FirstDayOfWeek="Monday"/>
                            <TextBox Margin="10" MinWidth="50" MaxLength="2" Text="{Binding StartTimeHours, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Margin="10" MinWidth="50" MaxLength="2" Text="{Binding StartTimeMinutes, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <TextBlock Text="Дата конца" Margin="5"/>
                        <StackPanel Orientation="Horizontal">
                            <DatePicker Margin="10" MinWidth="180" 
                                        SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}" 
                                        Focusable="False" FirstDayOfWeek="Monday"/>
                            <TextBox Margin="10" MinWidth="50" MaxLength="2" Text="{Binding EndTimeHours, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Margin="10" MinWidth="50" MaxLength="2" Text="{Binding EndTimeMinutes, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Button Content="Extract Videos"
                        Width="200"
                        Height="30"
                        Margin="10"
                        Command="{Binding TestStart}"/>

            </StackPanel>

            <StackPanel Grid.Column="1" DataContext="{Binding PageOneViewModel}">
                <DataGrid MinHeight="200" 
                          MaxHeight="200"
                          Margin="5" Padding="5" 
                          ItemsSource="{Binding VideoList}" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="StartDate" Binding="{Binding StartDateTime}" Width="200"/>
                        <DataGridTextColumn Header="Offset" Binding="{Binding Offset}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Border BorderBrush="Black" BorderThickness="1" DataContext="{Binding ScanInfo}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Кол-во найденных фрагментов: " TextAlignment="Center" HorizontalAlignment="Center" Padding="5"/>
                            <TextBlock MinWidth="150" Text="{Binding TotalCount}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Минимальная дата: " TextAlignment="Center" HorizontalAlignment="Center" Padding="5"/>
                            <TextBlock MinWidth="150" Text="{Binding MinDateTime}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Максимальная дата: " TextAlignment="Center" HorizontalAlignment="Center" Padding="5"/>
                            <TextBlock MinWidth="150" Text="{Binding MaxDateTime}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel>
                    <TextBlock Text="Прогресс" HorizontalAlignment="Center"/>
                    <ProgressBar Height="40" Width="400" Padding="5" Margin="5" Value="{Binding ExtractProgress}"/>
                </StackPanel>

                <StackPanel Visibility="{Binding IsNeedSecondProgressBar, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                    <TextBlock Text="Прогресс распределения по камерам" HorizontalAlignment="Center"/>
                    <ProgressBar Height="40" Width="400" Padding="5" Margin="5" Value="{Binding CamSortingProgress}"/>
                </StackPanel>

                <TextBox Text="{Binding LogText, Mode=OneWay}" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Column="1" Visibility="{Binding IsPage2, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}" IsEnabled="{Binding IsInProgress}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" DataContext="{Binding PageTwoViewModel}">
                <Border 
                    Padding="5" 
                    Height="30" 
                    Width="260"
                    Margin="10"
                    BorderBrush="Black" 
                    BorderThickness="1">
                    <TextBlock 
                        HorizontalAlignment="Left"
                        Text="{Binding RootPath, UpdateSourceTrigger=PropertyChanged}" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Center"
                        TextAlignment="Center"/>
                </Border>
                <Button 
                    Content="Выбрать папку" 
                    Width="140" 
                    Height="35" 
                    Margin="10"
                    Command="{Binding SelectFolder}"/>

                <Button 
                    Content="Склеить видео" 
                    Width="140" 
                    Height="35" 
                    Margin="10"
                    Command="{Binding StartMergingVideos}"/>

                <ProgressBar Height="40" Width="400" Padding="5" Margin="5" Value="{Binding MergeProgress}"/>

            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" DataContext="{Binding PageTwoViewModel}" >
                <TreeView Margin="10" MinWidth="300"
                      ItemsSource="{Binding Items}"
                      AllowDrop="True"
                      Name="FilesView">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="AllowDrop" Value="True"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </TreeView.ItemContainerStyle>

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Childs}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="20" Margin="3"
                                   Source="{Binding Type, Converter={x:Static converters:DirectoryItemTypeToImageConverter.Instance}}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding Name}" AllowDrop="True"/>
                                <i:Interaction.Triggers>

                                    <!-- <i:EventTrigger EventName="DragOver"> -->
                                    <!--     <i:InvokeCommandAction Command="{Binding DragEnter}"/> -->
                                    <!-- </i:EventTrigger> -->

                                    <!-- <i:EventTrigger EventName="Drop"> -->
                                    <!--     <i:InvokeCommandAction Command="{Binding Drop}"/> -->
                                    <!-- </i:EventTrigger> -->

                                    <!-- <i:EventTrigger EventName="MouseMove"> -->
                                    <!--     <i:InvokeCommandAction Command="{Binding MouseMove}"/> -->
                                    <!-- </i:EventTrigger> -->

                                    <!-- <i:EventTrigger EventName="MouseDoubleClick"> -->
                                    <!--     <i:InvokeCommandAction Command="{Binding DoubleClick}"/> -->
                                    <!-- </i:EventTrigger> -->

                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding MouseLeftButtonDown}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectedItemChanged">
                            <i:InvokeCommandAction Command="{Binding OnSelectedItemChange}" CommandParameter="{Binding ElementName=FilesView, Path=SelectedItem}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TreeView>

                <Border 
                    BorderThickness="1,1,1,1" 
                    BorderBrush="Black" 
                    MinWidth="600"
                    MaxWidth="860"
                    Padding="5"
                    Margin="10">
                    <MediaElement
                        ScrubbingEnabled="True"
                        Stretch="Fill"
                        LoadedBehavior="Play"
                        UnloadedBehavior="Close"
                        Source="{Binding SelectedItem.FullPath}"/>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Visibility="{Binding IsOptionsPage, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5">
                    <TextBox Text="Настройки" TextAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                </Border>
            </StackPanel>
            <WrapPanel Grid.Row="1">
                <StackPanel>
                    <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5" DataContext="{Binding PageOneViewModel}">
                        <StackPanel>
                            <TextBlock Text="Путь к python.exe" TextAlignment="Center" HorizontalAlignment="Center" Padding="5" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding PathToPythonExe}"/>
                                <Button Content="Выбрать путь" Command="{Binding SelectPythonExePath}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5" DataContext="{Binding PageOneViewModel}">
                        <StackPanel>
                            <TextBlock Text="Путь к скрипту" TextAlignment="Center" HorizontalAlignment="Center" Padding="5" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding PathToPythonScript}"/>
                                <Button Content="Выбрать путь" Command="{Binding SelectPythonScriptPath}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="1" BorderBrush="Black" Margin="5" Padding="5" DataContext="{Binding PageOneViewModel}">
                        <StackPanel>
                            <TextBlock Text="Путь к файлу результата" TextAlignment="Center" HorizontalAlignment="Center" Padding="5" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding PathToPythonOutput}"/>
                                <Button Content="Выбрать путь" Command="{Binding SelectPythonOutputPath}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </WrapPanel>
        </Grid>
    </Grid>

</Window>
